# EditorConfig - https://editorconfig.org
# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

# Go files - use tabs (Go standard)
[*.go]
indent_style = tab
indent_size = 4

# YAML files - use spaces
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files - use spaces
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefile - must use tabs
[Makefile]
indent_style = tab

# TypeScript/JavaScript (for OpenCode plugins)
[*.{ts,js}]
indent_style = space
indent_size = 2

# Git config files
[.git*]
indent_style = space
indent_size = 2
